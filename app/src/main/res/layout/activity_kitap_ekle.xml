<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KitapEkleActivity">

    <include layout="@layout/actionbar"
        android:id="@+id/actionbarlogin"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Çıkış yap"
        android:layout_marginLeft="275dp"
        android:textColor="@color/giris_kayit_color"
        android:id="@+id/cikisyap"
        android:textSize="15dp"
        android:background="@color/ColorDarkPurple"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/iv_back_button"
        android:src="@drawable/ic_geri_button" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:id="@+id/tv_title" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/actionbarlogin"
        android:id="@+id/tablerow1"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kitap İsmi:"
        android:layout_marginRight="12dp"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:maxLines="1"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/kitapismi"
        />
    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tablerow1"
        android:id="@+id/tablerow2"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yazarın İsmi:"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginTop="40dp"
            android:id="@+id/yazarismi"
            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tablerow2"
        android:id="@+id/tablerow3"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Raf:"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:id="@+id/kitapraf"
            android:maxLines="1"
            />
    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tablerow3"
        android:id="@+id/tablerow4"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kitap Fiyatı:"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            />

        <EditText
            android:id="@+id/fiyat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginTop="40dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tablerow4"
        android:id="@+id/tablerow5"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kitap Adeti:"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            />

        <EditText
            android:id="@+id/adet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginTop="40dp" />
    </TableRow>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tablerow5"
        android:id="@+id/yenikitapekle"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="50dp"
        android:background="#F9E79F"
        android:text="Ekle" />
</RelativeLayout>